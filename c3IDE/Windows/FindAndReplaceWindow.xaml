<mah:MetroWindow x:Class="c3IDE.Windows.FindAndReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:c3IDE.Windows"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
                 mc:Ignorable="d"
        Title="Find And Replace" Height="450" Width="680">
    <Grid>
        <DataGrid Margin="10" Name="SearchGrid" ItemsSource="{Binding}" AutoGenerateColumns="False">
           <DataGrid.Columns>
                <DataGridCheckBoxColumn ElementStyle="{DynamicResource MetroDataGridCheckBox}" Width="100" EditingElementStyle="{DynamicResource MetroDataGridCheckBox}" Header="Is Selected" Binding="{Binding Selected}" />
                <DataGridTextColumn Header="Text" Binding="{Binding Line}" Width="400"/>
                <DataGridTextColumn Header="File" Binding="{Binding Document}" Width="100"/>
                <DataGridTextColumn Header="Line Number" Binding="{Binding LineNumber}" Width="50"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</mah:MetroWindow>

